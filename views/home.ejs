<%- include("partials/header") -%>  
    <h1>Home</h1>

    <p><%=s_content%></p>

    <%for(var i=0;i<postarray.length;i++){%>
        <form action="/" method="post">
            <%var x=(postarray[i])%>
            <%if(x){%>
                
                <h1><%=(postarray[i].title)%></h1>
                <p><%=(postarray[i].content.substring(1,100)+"...")%>
                    <a href="/posts/<%=postarray[i]._id%>">Read More</a>
                </p>
            <%}%>
        </form>
    <%};%>


<%- include("partials/footer") -%>
